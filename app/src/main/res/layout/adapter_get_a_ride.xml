<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:onClick="adapterOnClick">

    <!-- endpoint -->
    <TextView
        android:id="@+id/tv1"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:text="endpoint"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="@id/guideline_3"
        app:layout_constraintLeft_toRightOf="@id/guideline_1"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:maxLines="1"
        />

    <!-- start point -->
    <TextView
        android:id="@+id/tv2"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="start point"
        android:textSize="24dp"
        android:gravity="center"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline_3"
        app:layout_constraintLeft_toLeftOf="@id/guideline_1"
        />

    <!-- trip time -->
    <TextView
        android:id="@+id/tv3"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="start time"
        android:textSize="16dp"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guideline_4"
        app:layout_constraintBottom_toTopOf="@+id/tv4"
        />

    <!-- trip length -->
    <TextView
        android:id="@+id/tv4"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="duration"
        android:textSize="16dp"
        android:gravity="right"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        app:layout_constraintLeft_toRightOf="@id/guideline_4"
        />

    <!-- free slots -->
    <TextView
        android:id="@+id/tv5"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="free slots"
        android:textSize="16dp"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        app:layout_constraintLeft_toRightOf="@id/guideline_4"
        />

    <TextView
        android:id="@+id/tv8"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="16dp"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline_4"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        app:layout_constraintLeft_toRightOf="@id/guideline_3"
        />

    <TextView
        android:id="@+id/tv7"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="price"
        android:textSize="16dp"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline_4"
        app:layout_constraintTop_toBottomOf="@id/tv8"
        app:layout_constraintLeft_toRightOf="@id/guideline_3"
        />

    <!-- user -->
    <TextView
        android:id="@+id/tv6"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="user"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline_1"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

</androidx.constraintlayout.widget.ConstraintLayout>