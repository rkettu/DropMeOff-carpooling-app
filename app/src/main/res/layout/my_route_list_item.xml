<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8077DD77">

    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/ListItemText1"
        android:text="placeholder"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        app:layout_constraintRight_toLeftOf="@id/guideline_0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ListItemText4"
        />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chevron_right_white_24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_marginBottom="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/ListItemText4"
        android:text="placeholder"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        app:layout_constraintRight_toLeftOf="@id/guideline_0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ListItemText1"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/ListItemText2"
        android:text="placeholder"
        android:gravity="end"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/guideline_0.6"
        app:layout_constraintRight_toLeftOf="@id/imgView"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_marginBottom="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/ListItemText3"
        android:text="placeholder"
        android:gravity="end"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/ListItemText2"
        app:layout_constraintRight_toLeftOf="@id/imgView"
        app:layout_constraintLeft_toRightOf="@id/guideline_0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>